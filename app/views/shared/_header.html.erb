<header>
  <div class="heading">
    <h1 class="title">Tabón de Anuncios</h1>
  </div>
  <div class="navbar">
    <ul class="lists">
      <% if user_signed_in? %>
        <li><li><%= link_to current_user.nickname, edit_user_registration_path, class: "user-nickname"%></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete%></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: 'login'%></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: 'sign-up'%></li>
      <% end %>
    </ul>
  </div>
</header>